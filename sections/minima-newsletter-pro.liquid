{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="minima-newsletter-pro color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width minima-newsletter-pro__grid">
    <div class="minima-newsletter-pro__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="minima-newsletter-pro__heading inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <div class="minima-newsletter-pro__description rte">
          {{ section.settings.description }}
        </div>
      {%- endif -%}
    </div>

    <div class="minima-newsletter-pro__form-wrap">
      {% form 'customer', class: 'minima-newsletter-pro__form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">

        <div class="field">
          <input
            id="NewsletterFormPro-{{ section.id }}"
            type="email"
            name="contact[email]"
            class="field__input"
            value="{{ form.email }}"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            {% if form.errors %}
              autofocus
              aria-invalid="true"
              aria-describedby="NewsletterPro-error-{{ section.id }}"
            {% elsif form.posted_successfully? %}
              aria-describedby="NewsletterPro-success-{{ section.id }}"
            {% endif %}
            placeholder="{{ section.settings.email_label }}"
            required
          >
          <label class="field__label" for="NewsletterFormPro-{{ section.id }}">
            {{ section.settings.email_label }}
          </label>
        </div>

        <label class="minima-newsletter-pro__consent" for="NewsletterConsent-{{ section.id }}">
          <input
            id="NewsletterConsent-{{ section.id }}"
            type="checkbox"
            required
          >
          <span>{{ section.settings.consent_text }}</span>
        </label>

        <button
          type="submit"
          class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %} minima-newsletter-pro__button"
          name="commit"
        >
          {{ section.settings.button_label | escape }}
        </button>

        {%- if form.errors -%}
          <p class="form__message minima-newsletter-pro__message" id="NewsletterPro-error-{{ section.id }}">
            {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
          </p>
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          <p
            class="form__message minima-newsletter-pro__message minima-newsletter-pro__message--success"
            id="NewsletterPro-success-{{ section.id }}"
            tabindex="-1"
            autofocus
          >
            {{ 'newsletter.success' | t }}
          </p>
        {%- endif -%}
      {% endform %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Minima newsletter pro",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Se el/la primero/a en leer nuestras novedades y recibe un 5% de descuento para suscriptores/as"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Recibe lanzamientos, promociones y consejos para una higiene dental mas sostenible.</p>"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email label",
      "default": "Email *"
    },
    {
      "type": "text",
      "id": "consent_text",
      "label": "Consent text",
      "default": "Acepto el uso de mis datos personales con fines comerciales."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Enviar"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary",
      "label": "Use secondary button style",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 140,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 140,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Minima newsletter pro"
    }
  ]
}
{% endschema %}
