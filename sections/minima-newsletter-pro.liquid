{%- style -%}
  .minima-newsletter { padding: 80px 0; background: #1A2E1A; color: #F8F5F0; text-align: center; }
  .minima-newsletter__inner { max-width: 600px; margin: 0 auto; padding: 0 32px; }
  .minima-newsletter__heading { font-family: 'Cormorant Garamond', serif; font-size: 32px; margin-bottom: 16px; color: #F8F5F0; }
  .minima-newsletter__text { font-size: 15px; opacity: 0.8; margin-bottom: 32px; line-height: 1.5; }
  .minima-newsletter__form { display: flex; gap: 12px; }
  .minima-newsletter__input { flex: 1; padding: 14px 20px; border-radius: 4px; border: none; font-family: 'Inter', sans-serif; font-size: 14px; }
  .minima-newsletter__submit { background: #4a7c59; color: #F8F5F0; border: none; padding: 0 32px; border-radius: 4px; font-weight: 600; text-transform: uppercase; cursor: pointer; letter-spacing: 0.05em; font-size: 12px; }
  @media (max-width: 549px) { .minima-newsletter__form { flex-direction: column; } .minima-newsletter__submit { padding: 14px; } }
{%- endstyle -%}

<section class="minima-newsletter" id="Newsletter-{{ section.id }}">
  <div class="minima-newsletter__inner">
    <h2 class="minima-newsletter__heading">{{ section.settings.heading }}</h2>
    <div class="minima-newsletter__text">{{ section.settings.text }}</div>
    
    {% form 'customer', class: 'minima-newsletter__form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <input type="email" name="contact[email]" class="minima-newsletter__input" placeholder="Tu email" required>
      <button type="submit" class="minima-newsletter__submit">Suscribirme</button>
    {% endform %}
  </div>
</section>

{% schema %}
{
  "name": "Newsletter Pro",
  "settings": [
    { "type": "inline_richtext", "id": "heading", "label": "Heading", "default": "Únete a la suscripción consciente" },
    { "type": "richtext", "id": "text", "label": "Text", "default": "<p>Recibe consejos de sostenibilidad y un 5% de descuento en tu primera compra.</p>" }
  ],
  "presets": [{ "name": "Newsletter Pro" }]
}
{% endschema %}
