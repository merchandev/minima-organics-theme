{%- style -%}
  .minima-hero { background: #F8F5F0; padding: 60px 0; overflow: hidden; }
  .minima-hero__inner { display: flex; align-items: center; max-width: 1260px; margin: 0 auto; padding: 0 32px; gap: 40px; }
  .minima-hero__content { flex: 1; }
  .minima-hero__eyebrow { font-size: 11px; font-weight: 600; text-transform: uppercase; color: #4a7c59; letter-spacing: 0.15em; display: block; margin-bottom: 20px; }
  .minima-hero__heading { font-family: 'Cormorant Garamond', serif; font-size: 52px; font-weight: 600; line-height: 1.1; color: #1A2E1A; margin: 0 0 24px; }
  .minima-hero__heading em { font-style: italic; color: #4a7c59; }
  .minima-hero__text { font-size: 16px; line-height: 1.7; color: #1A2E1A; opacity: 0.8; margin-bottom: 30px; }
  .minima-hero__button { display: inline-block; background: #1A2E1A; color: #F8F5F0; padding: 15px 35px; text-decoration: none; font-size: 12px; font-weight: 600; text-transform: uppercase; border-radius: 4px; letter-spacing: 0.1em; }
  .minima-hero__image-wrap { flex: 1; min-height: 400px; background: #F0ECE4; border-radius: 4px; display: flex; align-items: center; justify-content: center; overflow: hidden; }
  .minima-hero__image-wrap svg { width: 50%; opacity: 0.1; }
  @media (max-width: 989px) {
    .minima-hero__inner { flex-direction: column; text-align: center; }
    .minima-hero__heading { font-size: 36px; }
  }
{%- endstyle -%}

<section class="minima-hero">
  <div class="minima-hero__inner">
    <div class="minima-hero__content">
      <span class="minima-hero__eyebrow">{{ section.settings.eyebrow }}</span>
      <h1 class="minima-hero__heading">{{ section.settings.heading }}</h1>
      <div class="minima-hero__text">{{ section.settings.text }}</div>
      <a href="/collections/all" class="minima-hero__button">{{ section.settings.button_label }}</a>
    </div>
    <div class="minima-hero__image-wrap">
      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Editorial",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "100% Natural · Vegano · Zero Waste" },
    { "type": "inline_richtext", "id": "heading", "label": "Heading", "default": "La revolución de la <em>higiene dental</em>" },
    { "type": "richtext", "id": "text", "label": "Text", "default": "<p>En Minima Organics creemos en una limpieza profunda sin plásticos ni tóxicos. Cuidamos de tu sonrisa y del planeta.</p>" },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "Descubre la gama" }
  ],
  "presets": [
    { "name": "Hero Editorial" }
  ]
}
{% endschema %}
