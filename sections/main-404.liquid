<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style>

<script>
  (function () {
    var pathname;
    try {
      pathname = decodeURIComponent(window.location.pathname || '/').toLowerCase();
    } catch (e) {
      pathname = (window.location.pathname || '/').toLowerCase();
    }

    pathname = pathname.replace(/\/+$/, '') || '/';
    if (pathname.normalize) {
      pathname = pathname.normalize('NFD').replace(/[\u0300-\u036f]/g, '');
    }

    var parts = pathname.split('/').filter(Boolean);
    if (parts.length > 1) {
      var maybeLocale = parts[0];
      if (maybeLocale.length === 2 || maybeLocale.length === 5) {
        pathname = '/' + parts.slice(1).join('/');
        pathname = pathname.replace(/\/+$/, '') || '/';
      }
    }

    var redirectMap = {
      '/tienda': '/collections/all',
      '/catalogo': '/collections/all',
      '/blog': '/blogs/news',
      '/dentistas': '/pages/dentistas',
      '/contact': '/pages/contacto',
      '/sobre': '/pages/sobre-nosotras',
      '/sobre-nosotras': '/pages/sobre-nosotras',
      '/ingredientes': '/pages/sobre-nosotras',
      '/home': '/',
      '/inicio': '/',
      '/pages/home': '/'
    };

    var redirectTo = redirectMap[pathname];
    // Safeguard: Do not redirect if we are already on the target path or if target is known to fail
    if (redirectTo && redirectTo !== pathname && !window.location.href.includes(redirectTo)) {
      window.location.replace(redirectTo);
    }
  })();
</script>

<div class="template-404 page-width page-margin center">
  <p>
    {{ 'templates.404.subtext' | t }}
  </p>
  <h1 class="title">
    {{ 'templates.404.title' | t }}
  </h1>
  <a href="{{ routes.all_products_collection_url }}" class="button">
    {{ 'general.continue_shopping' | t }}
  </a>
</div>
