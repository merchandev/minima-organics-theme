{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="minima-partner-logos color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="minima-partner-logos__heading inline-richtext h2">{{ section.settings.heading }}</h2>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <p class="minima-partner-logos__subheading">{{ section.settings.subheading }}</p>
    {%- endif -%}

    <div class="minima-partner-logos__grid">
      {%- for block in section.blocks -%}
        <div class="minima-partner-logos__item" {{ block.shopify_attributes }}>
          {%- if block.settings.logo != blank -%}
            {%- assign logo_height = block.settings.logo.width | divided_by: block.settings.logo.aspect_ratio -%}
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="minima-partner-logos__link" aria-label="{{ block.settings.label | escape }}">
            {%- endif -%}
            {{
              block.settings.logo
              | image_url: width: 420
              | image_tag:
                loading: 'lazy',
                widths: '120, 240, 360, 420',
                sizes: '(min-width: 990px) 180px, 28vw',
                height: logo_height,
                class: 'minima-partner-logos__logo',
                alt: block.settings.label
            }}
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          {%- elsif block.settings.logo_external_url != blank -%}
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="minima-partner-logos__link" aria-label="{{ block.settings.label | escape }}">
            {%- endif -%}
            {% comment %}theme-check-disable RemoteAsset{% endcomment %}
            <img
              src="{{ block.settings.logo_external_url | escape }}"
              alt="{{ block.settings.label | escape }}"
              loading="lazy"
              class="minima-partner-logos__logo"
              width="420"
              height="120"
            >
            {% comment %}theme-check-enable RemoteAsset{% endcomment %}
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          {%- else -%}
            <div class="minima-partner-logos__logo minima-partner-logos__logo--placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Minima partner logos",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Con la colaboracion y apoyo de"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Edita esta seccion y sube los logos de tus aliados estrategicos."
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 140,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 140,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 56
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "limit": 8,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Accessible label",
          "default": "Partner logo"
        },
        {
          "type": "text",
          "id": "logo_external_url",
          "label": "External logo URL"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Logo link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Minima partner logos",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
