{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .min-footer {
    background-color: #F8F5F0;
    color: #1A2E1A;
    border-top: 1px solid rgba(26,46,26,0.1);
    font-family: 'Inter', sans-serif;
  }
  .min-footer__inner {
    max-width: 1260px;
    margin: 0 auto;
    padding: 0 32px;
  }
  .min-footer__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 64px;
    margin-bottom: 60px;
  }
  .min-footer__brand-col {
    max-width: 320px;
  }
  .min-footer__logo {
    font-family: 'Cormorant Garamond', serif;
    font-size: 24px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 24px;
    display: block;
    color: #1A2E1A;
    text-decoration: none;
  }
  .min-footer__brand-text {
    font-size: 14px;
    line-height: 1.7;
    opacity: 0.8;
    margin-bottom: 24px;
  }
  .min-footer__social-list {
    display: flex;
    gap: 16px;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .min-footer__social-link {
    color: #1A2E1A;
    transition: transform 0.2s ease, opacity 0.2s ease;
    display: block;
    opacity: 0.7;
  }
  .min-footer__social-link:hover {
    transform: translateY(-2px);
    opacity: 1;
  }
  .min-footer__social-link svg {
    width: 20px;
    height: 20px;
  }
  .min-footer__col-title {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #4a7c59;
    margin-bottom: 24px;
  }
  .min-footer__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .min-footer__menu-item {
    margin-bottom: 12px;
  }
  .min-footer__menu-link {
    font-size: 14px;
    text-decoration: none;
    color: #1A2E1A;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }
  .min-footer__menu-link:hover {
    opacity: 1;
  }
  .min-footer__contact-info {
    font-size: 14px;
    line-height: 1.8;
  }
  .min-footer__contact-item {
    margin-bottom: 12px;
    display: block;
    text-decoration: none;
    color: inherit;
    opacity: 0.8;
  }
  .min-footer__contact-item strong {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    opacity: 0.5;
  }
  .min-footer__info-contact {
    margin-top: 24px;
    font-size: 14px;
    border-top: 1px solid rgba(26,46,26,0.05);
    padding-top: 20px;
  }
  .min-footer__info-contact-item {
    display: block;
    margin-bottom: 12px;
    text-decoration: none;
    color: inherit;
    opacity: 0.8;
  }
  .min-footer__info-contact-item strong {
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    opacity: 0.6;
    margin-bottom: 4px;
  }
  .min-footer__bottom {
    border-top: 1px solid rgba(26,46,26,0.08);
    padding-top: 32px;
    margin-top: 64px; /* Added margin-top */
    display: flex;
    justify-content: center; /* Centered content */
    align-items: center;
    font-size: 12px;
    opacity: 0.6;
  }
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .min-footer__legal-link {
    text-decoration: none;
    color: inherit;
  }
  .min-footer__legal-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 989px) {
    .min-footer__grid {
      grid-template-columns: 1fr 1fr;
      gap: 48px;
    }
  }
  @media (max-width: 749px) {
    .min-footer__grid {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }
    .min-footer__brand-col {
      max-width: none;
    }
    .min-footer__social-list {
      justify-content: center;
    }
    .min-footer__bottom {
      flex-direction: column;
      gap: 16px;
      text-align: center;
    }
    .min-footer__legal {
      justify-content: center;
    }
  }
{%- endstyle -%}

<footer class="min-footer section-{{ section.id }}-padding">
  <div class="min-footer__inner">
    <div class="min-footer__grid">
      
      <!-- Brand & Social -->
      <div class="min-footer__brand-col">
        <a href="/" class="min-footer__logo">
          <img src="https://minima-organics-2.myshopify.com/cdn/shop/t/31/assets/minima.png?v=173027076104560226051771960716" alt="Minima Organics" style="max-width: 180px; height: auto;">
        </a>
        <p class="min-footer__brand-text">{{ section.settings.brand_text }}</p>
        <ul class="min-footer__social-list">
          <li>
            <a href="https://www.instagram.com/minimaorganics" class="min-footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="4"/><circle cx="17.5" cy="6.5" r="0.8" fill="currentColor" stroke="none"/></svg>
            </a>
          </li>
          <li>
            <a href="https://www.facebook.com/minimaorganics.espana#" class="min-footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
            </a>
          </li>
          <li>
            <a href="https://www.linkedin.com/company/minimaorganics/" class="min-footer__social-link" aria-label="LinkedIn" target="_blank" rel="noopener">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
            </a>
          </li>
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="min-footer__col-title">Información</h3>
        <ul class="min-footer__menu">
          <li class="min-footer__menu-item">
            <a href="/pages/politica-de-privacidad" class="min-footer__menu-link">Política de Privacidad</a>
          </li>
          <li class="min-footer__menu-item">
            <a href="/pages/terminos-y-condiciones" class="min-footer__menu-link">Términos y Condiciones</a>
          </li>
        </ul>
        <div class="min-footer__info-contact">
          {%- if section.settings.contact_email != blank -%}
            <a href="mailto:{{ section.settings.contact_email }}" class="min-footer__info-contact-item">
              <strong>{{ section.settings.contact_email_label }}</strong>
              {{ section.settings.contact_email }}
            </a>
          {%- endif -%}
          {%- if section.settings.contact_phone != blank -%}
            <a href="tel:{{ section.settings.contact_phone | replace: ' ', '' }}" class="min-footer__info-contact-item">
              <strong>{{ section.settings.contact_phone_label }}</strong>
              {{ section.settings.contact_phone }}
            </a>
          {%- endif -%}
        </div>
      </div>

      <!-- Shop Menu -->
      <div>
        <h3 class="min-footer__col-title">{{ section.settings.store_title }}</h3>
        {%- if section.settings.store_menu != blank -%}
          <ul class="min-footer__menu">
            {%- for link in section.settings.store_menu.links -%}
              {%- assign link_title = link.title | downcase -%}
              {%- unless link_title == 'contacto' or link_title == 'contact' -%}
                <li class="min-footer__menu-item">
                  <a href="{{ link.url }}" class="min-footer__menu-link">{{ link.title }}</a>
                </li>
              {%- endunless -%}
            {%- endfor -%}
            <li class="min-footer__menu-item">
              <a href="/pages/dentistas" class="min-footer__menu-link">Directorio de Dentistas</a>
            </li>
          </ul>
        {%- else -%}
          <ul class="min-footer__menu">
            <li class="min-footer__menu-item">
              <a href="/pages/dentistas" class="min-footer__menu-link">Directorio de Dentistas</a>
            </li>
          </ul>
        {%- endif -%}
      </div>

      <!-- Collaboration -->
      <div>
        <h3 class="min-footer__col-title">Con la colaboración y apoyo de:</h3>
        <div class="min-footer__collaboration">
          <img src="https://cdn.shopify.com/s/files/1/0979/1635/4944/files/apoyo_colaboracion_minima_organics.webp?v=1772029429" alt="Colaboración y Apoyo" style="max-width: 100%; height: auto; margin-top: 10px;">
        </div>
      </div>

    </div>

    <!-- Bottom Bar -->
    <div class="min-footer__bottom">
      <div class="min-footer__copyright">
        &copy; {{ 'now' | date: "%Y" }} Minima organics. {{ section.settings.copyright_text }}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Minima Footer Premium",
  "settings": [
    {
      "type": "text",
      "id": "brand_title",
      "label": "Brand Title",
      "default": "MINIMA ORGANICS"
    },
    {
      "type": "textarea",
      "id": "brand_text",
      "label": "Brand Story Text",
      "default": "Cuidamos de tu sonrisa y del planeta con productos 100% naturales, veganos y sin plástico."
    },
    {
      "type": "text",
      "id": "info_title",
      "label": "Info Column Title",
      "default": "Información"
    },
    {
      "type": "link_list",
      "id": "info_menu",
      "label": "Info Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "store_title",
      "label": "Store Column Title",
      "default": "Tienda"
    },
    {
      "type": "link_list",
      "id": "store_menu",
      "label": "Store Menu",
      "default": "main-menu"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Column Title",
      "default": "Contacto"
    },
    {
      "type": "text",
      "id": "contact_email_label",
      "label": "Email Label",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Email Address",
      "default": "info@minimaorganics.com"
    },
    {
      "type": "text",
      "id": "contact_phone_label",
      "label": "Phone Label",
      "default": "Teléfono"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Phone Number",
      "default": "(+34) 604 889 699"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Todos los derechos reservados."
    },
    {
      "type": "text",
      "id": "cookies_label",
      "label": "Cookies Label",
      "default": "Cookies"
    },
    {
      "type": "url",
      "id": "cookies_url",
      "label": "Cookies URL"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ]
}
{% endschema %}
