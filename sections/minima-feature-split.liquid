{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="minima-feature-split color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width minima-feature-split__grid">
    <div class="minima-feature-split__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="minima-feature-split__heading inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="minima-feature-split__text rte">
          {{ section.settings.text }}
        </div>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <a
          {% if section.settings.button_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.button_link }}"
          {% endif %}
          class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %} minima-feature-split__button"
        >
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>

    <div class="minima-feature-split__collage">
      {%- for index in (1..4) -%}
        {%- liquid
          assign image_id = 'image_' | append: index
          assign image = section.settings[image_id]
          assign external_image_id = image_id | append: '_external_url'
          assign external_image = section.settings[external_image_id]
        -%}
        <div class="minima-feature-split__item">
          {%- if image != blank -%}
            {%- assign image_height = image.width | divided_by: image.aspect_ratio -%}
            {{
              image
              | image_url: width: 900
              | image_tag:
                loading: 'lazy',
                widths: '360, 540, 720, 900',
                sizes: '(min-width: 990px) 26vw, (min-width: 750px) 42vw, 88vw',
                height: image_height,
                class: 'minima-feature-split__image',
                alt: image.alt | default: section.settings.heading | strip_html | escape
            }}
          {%- elsif external_image != blank -%}
            {% comment %}theme-check-disable RemoteAsset{% endcomment %}
            <img
              src="{{ external_image | escape }}"
              alt="{{ section.settings.heading | strip_html | escape }}"
              loading="lazy"
              class="minima-feature-split__image"
            >
            {% comment %}theme-check-enable RemoteAsset{% endcomment %}
          {%- else -%}
            <div class="minima-feature-split__image minima-feature-split__image--placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

