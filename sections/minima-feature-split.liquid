{%- style -%}
  .minima-split { padding: 80px 0; background: #F8F5F0; }
  .minima-split__inner { display: flex; align-items: center; max-width: 1260px; margin: 0 auto; padding: 0 32px; gap: 64px; }
  .minima-split__content { flex: 1; }
  .minima-split__image-wrap { flex: 1; aspect-ratio: 4/5; background: #EEE; border-radius: 4px; overflow: hidden; display: flex; align-items: center; justify-content: center; }
  .minima-split__image-wrap svg { width: 50%; opacity: 0.1; }
  .minima-split__heading { font-family: 'Cormorant Garamond', serif; font-size: 36px; margin-bottom: 24px; color: #1A2E1A; }
  .minima-split__text { font-size: 16px; line-height: 1.6; color: #1A2E1A; opacity: 0.8; margin-bottom: 32px; }
  .minima-split--reversed .minima-split__inner { flex-direction: row-reverse; }
  @media (max-width: 768px) {
    .minima-split__inner { flex-direction: column; text-align: center; gap: 32px; }
    .minima-split--reversed .minima-split__inner { flex-direction: column; }
  }
{%- endstyle -%}

<section class="minima-split {% if section.settings.image_position == 'left' %}minima-split--reversed{% endif %}">
  <div class="minima-split__inner">
    <div class="minima-split__content">
      <h2 class="minima-split__heading">{{ section.settings.heading }}</h2>
      <div class="minima-split__text">{{ section.settings.text }}</div>
      <a href="{{ section.settings.button_link }}" class="minima-hero__button">{{ section.settings.button_label }}</a>
    </div>
    <div class="minima-split__image-wrap">
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feature Split",
  "settings": [
    { "type": "select", "id": "image_position", "label": "Image Position", "options": [{ "value": "left", "label": "Left" }, { "value": "right", "label": "Right" }], "default": "right" },
    { "type": "inline_richtext", "id": "heading", "label": "Heading", "default": "Higiene dental <em>sin plástico</em>" },
    { "type": "richtext", "id": "text", "label": "Text", "default": "<p>Nuestra misión es eliminar el plástico de tu rutina diaria con alternativas sostenibles y efectivas.</p>" },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "Nuestra historia" },
    { "type": "url", "id": "button_link", "label": "Button Link" }
  ],
  "presets": [{ "name": "Feature Split" }]
}
{% endschema %}
