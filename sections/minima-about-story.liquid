{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section id="sobre-nosotras" class="minima-about-page color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="minima-about-page__hero">
      <div class="minima-about-page__hero-media">
        {%- if section.settings.hero_image != blank -%}
          {%- assign hero_height = section.settings.hero_image.width | divided_by: section.settings.hero_image.aspect_ratio -%}
          {{
            section.settings.hero_image
            | image_url: width: 1200
            | image_tag:
              loading: 'lazy',
              widths: '400, 700, 900, 1200',
              sizes: '(min-width: 990px) 46vw, 100vw',
              class: 'minima-about-page__image',
              height: hero_height,
              alt: section.settings.hero_image.alt
          }}
        {%- elsif section.settings.hero_image_external != blank -%}
          {% comment %}theme-check-disable RemoteAsset{% endcomment %}
          <img
            src="{{ section.settings.hero_image_external | escape }}"
            alt="{{ section.settings.hero_heading | escape }}"
            loading="lazy"
            class="minima-about-page__image"
            width="1200"
            height="900"
          >
          {% comment %}theme-check-enable RemoteAsset{% endcomment %}
        {%- endif -%}

        {%- if section.settings.video_url != blank -%}
          <div class="minima-about-page__video-wrap">
            {%- if section.settings.video_url.type == 'youtube' -%}
              <iframe
                src="https://www.youtube-nocookie.com/embed/{{ section.settings.video_url.id }}"
                title="{{ section.settings.video_title | escape }}"
                loading="lazy"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            {%- elsif section.settings.video_url.type == 'vimeo' -%}
              <iframe
                src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}"
                title="{{ section.settings.video_title | escape }}"
                loading="lazy"
                allow="autoplay; fullscreen; picture-in-picture"
                allowfullscreen
              ></iframe>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>

      <div class="minima-about-page__hero-content">
        <h1 class="minima-about-page__heading">{{ section.settings.hero_heading }}</h1>
        <div class="minima-about-page__text rte">
          {{ section.settings.hero_text }}
        </div>
      </div>
    </div>

    <div class="minima-about-page__split">
      <div class="minima-about-page__split-content">
        <h2 class="minima-about-page__split-title">{{ section.settings.story_heading }}</h2>
        <div class="minima-about-page__text rte">
          {{ section.settings.story_text }}
        </div>
      </div>
      <div class="minima-about-page__split-media">
        {%- if section.settings.story_image != blank -%}
          {%- assign story_height = section.settings.story_image.width | divided_by: section.settings.story_image.aspect_ratio -%}
          {{
            section.settings.story_image
            | image_url: width: 1100
            | image_tag:
              loading: 'lazy',
              widths: '400, 700, 900, 1100',
              sizes: '(min-width: 990px) 42vw, 100vw',
              class: 'minima-about-page__image',
              height: story_height,
              alt: section.settings.story_image.alt
          }}
        {%- elsif section.settings.story_image_external != blank -%}
          {% comment %}theme-check-disable RemoteAsset{% endcomment %}
          <img
            src="{{ section.settings.story_image_external | escape }}"
            alt="{{ section.settings.story_heading | escape }}"
            loading="lazy"
            class="minima-about-page__image"
            width="1100"
            height="900"
          >
          {% comment %}theme-check-enable RemoteAsset{% endcomment %}
        {%- endif -%}
      </div>
    </div>

    <div class="minima-about-page__split">
      <div class="minima-about-page__split-content">
        <h2 class="minima-about-page__split-title">{{ section.settings.values_heading }}</h2>
        <div class="minima-about-page__text rte">
          {{ section.settings.values_text }}
        </div>
      </div>
      <div class="minima-about-page__split-media">
        {%- if section.settings.values_image != blank -%}
          {%- assign values_height = section.settings.values_image.width | divided_by: section.settings.values_image.aspect_ratio -%}
          {{
            section.settings.values_image
            | image_url: width: 1100
            | image_tag:
              loading: 'lazy',
              widths: '400, 700, 900, 1100',
              sizes: '(min-width: 990px) 42vw, 100vw',
              class: 'minima-about-page__image',
              height: values_height,
              alt: section.settings.values_image.alt
          }}
        {%- elsif section.settings.values_image_external != blank -%}
          {% comment %}theme-check-disable RemoteAsset{% endcomment %}
          <img
            src="{{ section.settings.values_image_external | escape }}"
            alt="{{ section.settings.values_heading | escape }}"
            loading="lazy"
            class="minima-about-page__image"
            width="1100"
            height="900"
          >
          {% comment %}theme-check-enable RemoteAsset{% endcomment %}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

