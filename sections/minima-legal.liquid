{%- style -%}
  .legal-section {
    max-width: 800px;
    margin: 0 auto;
    padding: 60px 20px 100px;
    font-family: 'Inter', sans-serif;
    color: #1A2E1A;
    line-height: 1.8;
  }
  .legal-section h1 {
    font-family: 'Cormorant Garamond', serif;
    font-size: 3.5rem;
    font-weight: 400;
    margin-bottom: 40px;
    text-align: center;
  }
  .legal-section h2 {
    font-size: 1.4rem;
    font-weight: 600;
    margin-top: 40px;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .legal-section p {
    margin-bottom: 20px;
    font-size: 15px;
    opacity: 0.9;
  }
  .legal-section ul, .legal-section ol {
    margin-bottom: 20px;
    padding-left: 20px;
  }
  .legal-section li {
    margin-bottom: 10px;
    font-size: 15px;
    opacity: 0.9;
  }
{%- endstyle -%}

<div class="legal-section">
  <h1>{{ section.settings.title }}</h1>
  <div class="legal-content">
    {{ section.settings.content }}
  </div>
</div>

{% schema %}
{
  "name": "Mínima Legal Content",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Información Legal"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Contenido"
    }
  ],
  "presets": [
    {
      "name": "Mínima Legal Content"
    }
  ]
}
{% endschema %}
