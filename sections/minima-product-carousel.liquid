{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .mpc-section { overflow: hidden; }

  .mpc-heading-wrap {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-bottom: 32px;
    gap: 16px;
  }
  .mpc-heading {
    font-family: var(--font-heading-family, 'Cormorant Garamond', serif);
    font-size: clamp(24px, 3vw, 40px);
    font-weight: 600;
    margin: 0;
    color: var(--color-foreground, #1a2e1a);
    letter-spacing: -0.01em;
  }
  .mpc-view-all {
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-foreground, #1a2e1a);
    text-decoration: none;
    border-bottom: 1px solid var(--color-foreground, #1a2e1a);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .mpc-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.cards_per_desktop }}, 1fr);
    gap: 24px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mpc-card {
    background: transparent;
    text-decoration: none;
    display: block;
    color: inherit;
    transition: transform 0.3s ease;
  }
  .mpc-card:hover { transform: translateY(-4px); }

  .mpc-card__media {
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    background: rgba(26,46,26,0.04);
    margin-bottom: 14px;
  }
  .mpc-card__image-wrap {
    aspect-ratio: 4/5;
    overflow: hidden;
  }
  .mpc-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.4s ease;
    display: block;
  }
  .mpc-card:hover .mpc-card__img { transform: scale(1.04); }

  .mpc-card__badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: var(--color-foreground, #1a2e1a);
    color: var(--color-background, #f8f5f0);
    font-size: 9px;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 4px 10px;
    border-radius: 2px;
    z-index: 1;
  }

  .mpc-card__title {
    font-size: 14px;
    font-weight: 500;
    color: var(--color-foreground, #1a2e1a);
    margin: 0 0 6px;
    letter-spacing: 0.01em;
    line-height: 1.4;
  }
  .mpc-card__price {
    font-size: 14px;
    font-weight: 600;
    color: var(--color-foreground, #1a2e1a);
  }
  .mpc-card__price s {
    font-weight: 400;
    opacity: 0.4;
    margin-right: 6px;
  }

  @media screen and (max-width: 989px) {
    .mpc-grid { grid-template-columns: repeat(2, 1fr); gap: 16px; }
  }
  @media screen and (max-width: 549px) {
    .mpc-grid { grid-template-columns: 1fr; }
  }
{%- endstyle -%}

{%- liquid
  assign products_source = section.settings.collection.products
  assign limit = section.settings.products_to_show
-%}

<section class="mpc-section color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">

    {%- if section.settings.heading != blank -%}
      <div class="mpc-heading-wrap">
        <h2 class="mpc-heading">{{ section.settings.heading }}</h2>
        {%- if section.settings.collection != blank -%}
          <a href="{{ section.settings.collection.url }}" class="mpc-view-all">Ver todos</a>
        {%- endif -%}
      </div>
    {%- endif -%}

    <ul class="mpc-grid" role="list">
      {%- if section.settings.collection != blank and section.settings.collection.products.size > 0 -%}
        {%- for product in products_source limit: limit -%}
          {%- liquid
            assign badge_text = ''
            if product.available == false and section.settings.show_sold_out_badge
              assign badge_text = section.settings.sold_out_badge_text
            elsif product.compare_at_price > product.price and product.available and section.settings.show_sale_badge
              assign badge_text = section.settings.sale_badge_text
            endif
          -%}
          <li>
            <a href="{{ product.url }}" class="mpc-card">
              <div class="mpc-card__media">
                {%- if badge_text != '' -%}
                  <span class="mpc-card__badge">{{ badge_text | escape }}</span>
                {%- endif -%}
                <div class="mpc-card__image-wrap">
                  {%- if product.featured_media -%}
                    {{
                      product.featured_media
                      | image_url: width: 800
                      | image_tag:
                        class: 'mpc-card__img',
                        loading: 'lazy',
                        widths: '300, 400, 600, 800',
                        sizes: '(min-width: 990px) 25vw, (min-width: 550px) 45vw, 90vw',
                        alt: product.featured_media.alt | default: product.title
                    }}
                  {%- else -%}
                    {{ 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg mpc-card__img' }}
                  {%- endif -%}
                </div>
              </div>
              <h3 class="mpc-card__title">{{ product.title | escape }}</h3>
              <div class="mpc-card__price">
                {%- if product.compare_at_price > product.price and section.settings.show_compare_at_price -%}
                  <s>{{ product.compare_at_price | money }}</s>
                {%- endif -%}
                {{ product.price | money }}
              </div>
            </a>
          </li>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..limit) -%}
          {%- if forloop.index > 4 -%}{%- break -%}{%- endif -%}
          <li>
            <div class="mpc-card">
              <div class="mpc-card__media">
                <div class="mpc-card__image-wrap">
                  {{ 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg mpc-card__img' }}
                </div>
              </div>
              <h3 class="mpc-card__title">Producto de ejemplo</h3>
              <div class="mpc-card__price">{{ 2900 | money }}</div>
            </div>
          </li>
        {%- endfor -%}
      {%- endif -%}
    </ul>

  </div>
</section>

{% schema %}
{
  "name": "Product Carousel",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Productos destacados"
    },
    {
      "type": "range",
      "id": "cards_per_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 4,
      "label": "Columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_compare_at_price",
      "default": true,
      "label": "Show compare-at price"
    },
    {
      "type": "checkbox",
      "id": "show_sale_badge",
      "default": true,
      "label": "Show sale badge"
    },
    {
      "type": "text",
      "id": "sale_badge_text",
      "label": "Sale badge text",
      "default": "Oferta"
    },
    {
      "type": "checkbox",
      "id": "show_sold_out_badge",
      "default": true,
      "label": "Show sold-out badge"
    },
    {
      "type": "text",
      "id": "sold_out_badge_text",
      "label": "Sold-out badge text",
      "default": "Agotado"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    }
  ],
  "presets": [
    {
      "name": "Product Carousel"
    }
  ]
}
{% endschema %}
